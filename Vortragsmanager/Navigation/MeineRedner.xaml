<UserControl x:Class="Vortragsmanager.Navigation.MeineRedner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vortragsmanager.Navigation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:MeineRednerViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#3C3C3C" />
        <Label Grid.Row="0" Content="{Binding MenuHeaderTitel}" VerticalContentAlignment="Center" FontSize="20" Margin="10,0" Foreground="White"/>
        <ToggleButton Grid.Row="0" 
                    HorizontalAlignment="Right" 
                    Style="{StaticResource navimenuHeaderButton}"
                    IsChecked="{Binding NeueAnfrageButtonIsChecked}">
            <Image Source="/Images/NewMail_64x64.png" Margin="10"/>
        </ToggleButton>
        <ContentControl Grid.Row="1" Content="{Binding ActiveUserControl}"/>
        
    </Grid>
</UserControl>
