<UserControl x:Class="Vortragsmanager.Views.AntwortEintragenView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
        xmlns:local="clr-namespace:Vortragsmanager.Views"
        xmlns:Navi="clr-namespace:Vortragsmanager.Navigation"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800">
    <dxwui:PageAdornerControl Header="Aktionen">
        <dxwui:PageAdornerControl.HeaderTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ContentPresenter Content="{Binding}" />
                    <Navi:NavigatorView HorizontalAlignment="Right" Grid.Column="1" />
                </Grid>
            </DataTemplate>
        </dxwui:PageAdornerControl.HeaderTemplate>
        <Grid>
            <local:AntwortEintragenControl x:Name="AntwortEintragen"/>
        </Grid>
    </dxwui:PageAdornerControl>
</UserControl>
