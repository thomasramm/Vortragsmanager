<UserControl x:Class="Vortragsmanager.UserControls.DashboardWeekItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vortragsmanager.UserControls"
             mc:Ignorable="d" 
             MinHeight="50"
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="3" BorderBrush="LightGray" BorderThickness="1"/>
        <Label x:Name="_week" 
               Content="05.06.2022" 
               Grid.Column="0" 
               Foreground="{StaticResource textHighlight}" 
               VerticalContentAlignment="Center" 
               FontSize="16"
               HorizontalContentAlignment="Center"/>
        <TextBlock x:Name="_meinPlan" Grid.Column="1" Text="Vortragsredner" Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>
        <TextBlock x:Name="_meineRedner" Grid.Column="2" Text="Extern" Foreground="{StaticResource TextColor}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
