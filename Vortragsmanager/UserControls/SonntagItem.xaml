<UserControl x:Class="Vortragsmanager.UserControls.SonntagItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vortragsmanager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" 
             d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="{Binding Datum}" Width="100"/>
            <Label Content="{Binding Vortragsredner}"  Width="150"/>
            <Label Content="{Binding AuswärtigeRedner}" Width="200"/>
            <ComboBox ItemsSource="{Binding Vorsitz}" 
                      SelectedItem="{Binding SelectedVorsitz}" 
                      DisplayMemberPath="PersonName"
                      Width="150"/>
            <ComboBox ItemsSource="{Binding Leser}" 
                      SelectedItem="{Binding SelectedLeser}"
                      DisplayMemberPath="PersonName"
                      Width="150"/>
        </StackPanel>
    </Grid>
</UserControl>
